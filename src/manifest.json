{
	"name": "Hue Light Controller",
	"description": "Simple controller for Philips Hue Lights",
	"version": "0.2.3",
	"manifest_version": 2,

	"app": {
		"background": {
			"scripts": [ "background.js" ]
		}
	},

	"icons": {
		"16": "icons/hue-icon-16.png",
		"32": "icons/hue-icon-32.png",
		"48": "icons/hue-icon-48.png",
		"128": "icons/hue-icon-128.png"
	},

	"permissions": [
		"storage"
	]
}
